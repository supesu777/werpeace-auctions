<%- include('header', { pageTitle: 'About' }) %>

<section class="section about-page">
  <div class="container container-narrow">
    <h1><%= about.title %></h1>
    <p class="about-mission"><%= about.mission %></p>
    <% about.description.split('\n\n').forEach(function(para) { %>
      <p><%= para %></p>
    <% }); %>
    <div class="about-contact">
      <h3>Get In Touch</h3>
      <p>
        <a href="<%= about.contact.website %>" target="_blank" rel="noopener"><%= about.contact.website %></a><br>
        <a href="mailto:<%= about.contact.email %>"><%= about.contact.email %></a>
      </p>
    </div>
  </div>
</section>

<%- include('footer', { includeAppJs: false }) %>
